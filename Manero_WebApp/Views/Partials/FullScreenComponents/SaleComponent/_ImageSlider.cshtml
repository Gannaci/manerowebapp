@using Manero_WebApp.ViewModels.HomeViewModels;
@{
    List<ImageSliderViewModel> imageSliderItems = new List<ImageSliderViewModel>
    {
        new ImageSliderViewModel
        {
            Title1 = "Welcome To Manero!",
            Title2 = "50% off",
            ImageUrl = "https://images.unsplash.com/photo-1523381210434-271e8be1f52b?auto=format&fit=crop&q=80&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=2070"
        },
        new ImageSliderViewModel
        {
            ImageUrl = "https://images.unsplash.com/photo-1460353581641-37baddab0fa2?auto=format&fit=crop&q=80&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=2071"
        },
        new ImageSliderViewModel
        {
            Title1 = "Slide 3",
            ImageUrl = "https://images.unsplash.com/photo-1554411529-ee36dfde51b9?auto=format&fit=crop&q=80&w=1974&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        }
    };
}
<section class="my-5">
    @foreach (var item in imageSliderItems)
    {
        <a href="" class="image-component-body position-relative m-auto">
            <img class="slider-image" src="@item.ImageUrl" alt="@item.Title1 image">
            <div class="position-absolute bottom-0 start-0 p-2 m-2 z-4">
                @if (item.Title1 != null)
                {
                    <h2 class="text-white fw-bold fs-4">@item.Title1</h2>
                }
                @if (item.Title2 != null)
                {
                    <h3 class="text-white fw-bold fs-4">@item.Title2</h3>
                }
            </div>
        </a>
    }
    <div class="page-dots"></div>
</section>

<script src="~/js/ImageSlider.js"></script>