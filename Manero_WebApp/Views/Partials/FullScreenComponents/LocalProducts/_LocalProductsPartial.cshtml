@using Manero_WebApp.ViewModels.HomeViewModels;
@model Manero_WebApp.ViewModels.HomeViewModels.LocalProductViewModel;

<section class="testing">
    <div class="container" style="display: flex; flex-wrap: wrap; justify-content: space-between;">
        @foreach (var product in Model.Products)
        {
            <div class="card" style="flex: 0 0 calc(33.3333% - 10px); margin-bottom: 20px;">
                <a href="#">
                    <div class="box">
                        <div class="icons">
                            <i class="fa-light fa-heart"></i>
                            <i class="fa-light fa-bag-shopping"></i>
                        </div>
                    </div>
                </a>
                <div class="rating">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <h1 class="number-of-reviews">(3)</h1>
                </div>
                <h1 class="product-name">@product.Name</h1>
                <h1 class="product-price">@product.Price.ToString("C")</h1>
                <form asp-action="AddProduct" asp-controller="ShoppingCart" method="post">
                    <input type="hidden" name="model.ArticleNumber" value="@product.ArticleNumber" />
                    <button class="add-to-cart-button" style="width: 200px;">Add to Cart</button>
                </form>
            </div>
        }
    </div>
</section>