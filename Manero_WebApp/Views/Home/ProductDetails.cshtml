<div class="container">
    <div class="product-details-mobile">
        <div class="product-card">
            <div class="product-image">
                <img src="https://placehold.co/200x255" alt="@Model.Name" class="product-image">
            </div>
            <h2 class="product-title">@Model.Name</h2>
            <div class="product-rating">
                @for (var i = 0; i < Model.AverageRating; i++)
                {
                    <i class="fa-solid fa-star"></i>
                }
                @for (var i = 0; i < (5 - Model.AverageRating); i++)
                {
                    <i class="fa-regular fa-star"></i>
                }
                @* (@Model.NumberOfReviews) *@
            </div>
            <div class="product-price">$@Model.Price</div>
            <div class="product-size">
                <!-- Size buttons go here -->
            </div>
            <div class="product-color">
                <!-- Color buttons go here -->
            </div>
            <div class="product-description">@Model.Description</div>
            <button class="add-to-cart">+ Add to cart</button>
            <div class="product-reviews">
                @* <h3>Reviews (@Model.NumberOfReviews)</h3> *@
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <ul>
                        @foreach (var review in Model.Reviews)
                        {
                            <li>@review.Username: @review.Content (Rating: @review.Rating)</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>




